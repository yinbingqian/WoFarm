<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/type_layout"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:background="@color/gray_textlayout" >

        <TextView
            android:id="@+id/ordertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="水果类"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/orderresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="交易成功"
            android:textColor="@color/text_green"
            android:textSize="14dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="76dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/orderimg"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/orderimg" >

            <TextView
                android:id="@+id/proname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="新产富士苹果新产富士苹果新产富士苹果新产富士苹果"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/proprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/proname"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:text="¥ 4.5/KG"
                android:textColor="@color/text_green"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_listline_s" />

    <RelativeLayout
        android:id="@+id/hj_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvhj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="共计：¥139"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btndelete"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/delete_btn_bg"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/gray_text"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>