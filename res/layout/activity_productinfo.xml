<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/green_login_btn"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="商品详情"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="35dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back"
            android:gravity="center"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_ad1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ad1" />

            <RelativeLayout
                android:id="@+id/textlayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="16dp" >

                <TextView
                    android:id="@+id/proname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新产富士苹果新产富士苹果新产富士苹果新产富士苹果"
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/proweight_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/proname_tv"
                    android:layout_marginTop="4dp"
                    android:text="¥ 4.5/KG"
                    android:textColor="@color/text_green"
                    android:textSize="17dp" />

                <ImageView
                    android:id="@+id/add_img"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/proname_tv"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/add" />

                <TextView
                    android:id="@+id/count_tv"
                    android:layout_width="36dp"
                    android:layout_height="22dp"
                    android:layout_below="@+id/proname_tv"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/add_img"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/gray_text"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/subtract_img"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_below="@+id/proname_tv"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@+id/count_tv"
                    android:background="@drawable/subtract" />
            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_listline_item" />

            <LinearLayout
                android:id="@+id/textlayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text11"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="商品上架时间："
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/prodate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/text11"
                    android:layout_marginRight="10dp"
                    android:text="2016年10月12日"
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_listline_item" />

            <LinearLayout
                android:id="@+id/textlayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text21"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="商品产地："
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/text22"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/location"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="辽宁省锦州市"
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_listline_item" />

            <LinearLayout
                android:id="@+id/textlayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text31"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品产量："
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/prototal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="3232333KG"
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_listline_item" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/prodetail_tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品详情："
                    android:textColor="@color/gray_text"
                    android:textSize="14dp" />

                <ListView
                    android:id="@+id/prodetail_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/car_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/graycar_bg"
                android:padding="12dp"
                android:src="@drawable/shopping_cart" />

            <TextView
                android:id="@+id/carcount_tv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/notification_bubble"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btnaddcart"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@color/yellow_bg"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/btnbuynow"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@color/yellow_bg_s"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

</RelativeLayout>