<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_layoutbg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="137dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/textlayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp" >

            <TextView
                android:id="@+id/user_tv"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="收货人：白杰"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_tv"
                android:layout_alignParentRight="true"
                android:text="18831405848"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/user_tv"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/next_iv"
                android:text="收货地址：河北省承德市顶顶顶顶顶顶顶顶顶顶顶顶顶顶顶"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/gray_listline_s" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chkItem"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/checkbox_right"
                android:button="@null"
                android:enabled="false" >
            </CheckBox>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:layout_marginTop="16dp"
                android:text="默认地址"
                android:textColor="@color/text_green"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/tv_delete"
                android:background="@drawable/edit" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/tv_delete"
                android:text="编辑"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/tv_delete"
                android:background="@drawable/delete" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="删除"
                android:textColor="@color/gray_text"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>